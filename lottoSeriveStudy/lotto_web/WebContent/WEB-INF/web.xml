<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>로또 웹 애플리케이션</display-name>

    <!--서블릿 설정 -->
    <servlet>
        <servlet-name>LottoServlet</servlet-name>
        <servlet-class>com.lottoweb.controller.LottoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- 서블릿 매핑  -->
    <servlet-mapping>
        <servlet-name>LottoServlet</servlet-name>
        <url-pattern>/lotto</url-pattern>
    </servlet-mapping>

    <!-- 웰컴 파일 설정: /lotto_web/ 접속 시 index.jsp 표시 -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- 예외 처리 설정  -->
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

</web-app>
